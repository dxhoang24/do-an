<%- include("../layout/head") %>
  <%- include("../layout/nav") %>
    <link rel="stylesheet" href="/css/body.css">
    <br />

    <body>

      <div class="aside">
        <%- include("./list_cate") %>
      </div>
      <div class="content">
        <h3 style="color: red">
          Danh sách sản phẩm
        </h3>
        <div class="container">

          <div class="row">
            
              <% danhsach.forEach(function(product){ %>
              <div class="col-sm-3">
                        <div class="thumbnail" >
                          <img
                            class=""
                            src="/upload/<%- product.image %>"
                            alt="Sản phẩm 8"
                            
                            style="padding-right: 6%; width: 100%; height: 200px;"
                          />
                          <div class="caption">
                            <h4 class="">
                              <%- product.name %>
                            </h4>
                            <p
                              class=""
                              style="
                                white-space: nowrap;
                                overflow: hidden;
                                text-overflow: ellipsis;
                              "
                            >
                              <%- product.note %>
                            </p>
                           
                              <div class="">
                                <p class="lead"><%- product.price %> VNĐ</p>
                              </div>
                          </div>
                        </div>
                  
                        <div class="">
                          <a
                            class="btn btn-success"
                            href="/user/detail-product/<%- product._id %>"
                            >Chi tiết</a
                          >
                        </div>
                    </div> 
                    <% }); %>
              </div>
        </div>


      </div>
      </div>
      </div>
      <%- include("../layout/footer") %>
    </body>