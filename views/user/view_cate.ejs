<%- include("../layout/head") %>
  <%- include("../layout/nav") %>
    <link rel="stylesheet" href="/css/body.css">
    <br />

    <body>

      <div class="aside">
        <%- include("./list_cate") %>
      </div>
      <div class="content">
        <h3 style="color: red">
          Danh sách sản phẩm
        </h3>
        <div class="container">

          <div class="row" style="margin-left: -5%" >
            
              <% danhsach.forEach(function(product){ %>
              <div class="col-sm-3">
                        <div class="thumbnail" >
                          <img
                            class=""
                            src="/upload/<%- product.image %>"
                            alt="Sản phẩm 8"
                            
                            style="padding-right: 6%; width: 100%; height: 200px;"
                          />
                          <div class="caption">
                            <h4 class="">
                              <%- product.name %>
                            </h4>
                            <p
                              class=""
                              style="
                                white-space: nowrap;
                                overflow: hidden;
                                text-overflow: ellipsis;
                              "
                            >
                              <%- product.note %>
                            </p>
                           
                              <div class="">
                                <p class="lead"><%- product.price %> VNĐ</p>
                              </div>
                          </div>
                        </div>
                  
                        <div class="">
                          <a
                            class="btn btn-success"
                            href="/user/detail-product/<%- product._id %>"
                            >Chi tiết</a
                          >
                        </div>
                    </div> 
                    <% }); %>
              </div>
        </div>

        <!-- pagination -->
    <div class="row">
      <!-- hiển thị phân trang nếu có trang -->
      <% if(pages > 0) { %>
      <nav class="mx-auto">
        <ul class="pagination" style="margin-top: 2rem;">
        
          <!-- FIRST ITEM -->  
          <% if(current == 1) { %> 
       
              <li class="page-item disabled">
                <a class="page-link">First</a>
              </li>
          <% } else { %>
         
              <li class="page-item">
                <a class="page-link" href="/admin/list-product">First</a>
              </li>
          <% } %>
        
          <!-- ITEMS  -->
          <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %> 
         <% if(i !== 1) { %>
              <li class="page-item disabled">
                <a class="page-link" href="#">...</a>
              </li>
          <% } %>
          <% for(; i <= (Number(current) + 2) && i <= pages; i++) { %>
             <% if(i == current) { %>
              <li class="page-item active">
                <a class="page-link" href="/admin/list-product/<%= i %>/">
                  <%= i %>
                </a>
              </li>
          <% } else { %>
              <li class="page-item">
                <a class="page-link" href="/admin/list-product/<%= i %>/">
                  <%= i %>
                </a>
              </li>
          <% } %>
          <% if (i == Number(current) + 2 && i < pages) { %>
              <li class="page-item disabled">
                <a class="page-link" href="#">...</a>
              </li>
          <% } %>
          <% } %>
          
          <!-- LAST ITEM -->
          <% if(current == pages) { %> 
             <li class="page-item disabled">
              <a class="page-link" >
                  Last
              </a>
              </li>
          <% } else { %>
          
              <li class="page-item">
                <a class="page-link" href="/admin/list-product/<%= pages %>/">
                  Last
                </a>
              </li>
          <% } %>
        </ul>
      </nav>
      <% } %>
    </div>
      </div>
      </div>
      </div>
      <%- include("../layout/footer") %>
    </body>