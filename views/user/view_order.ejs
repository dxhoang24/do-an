<%- include("../layout/head") %>

<link rel="stylesheet" href="css/body.css">
  <%- include("../layout/nav") %>

  

    

<!------------------->
      <div class="container">
       
<!-- Header End -->

     <!--  breadcrumb -->      
      <h1 class="heading1" style="padding:2%; color: red;"><span class="maintext"> </span><span class="subtext"> 
        
        Chi tiết mua hàng</span></h1>
      <hr>
      <!-- Cart-->
      <div class="cart-info">
        <table class="table table-striped table-bordered">
          <tr>
           
            <th>ID</th>
            <th>Name</th>
            <th>Hình ảnh</th>
            <th>Màu sắc</th>
            <th>Size</th>
            <th>Số Lượng</th>
            <th>Thành tiền</th>
           
          </tr>
          <tbody>
            <% var id = 0; var total = 0 %>
            <% cart.cart.forEach(function(item){ id ++; total += item.price;%>
            <tr>
                <td class="align-middle"><%= id%></td>
                <td class="align-middle"><%= item.item.name%></td>
                <td class="align-middle"> <img src="/upload/<%= item.item.image%>" width="150px" alt=""></td>
                <td class="align-middle">
                  <%= item.color%>
                </td>
                <td class="align-middle">
                  <%= item.size %>
                </td>
                <td class="align-middle"><%= item.qty%></td>
                <td class="align-middle"><%= item.price%> VNĐ</td>
            </tr>
            <%})%>

            <tr>
                <td colspan="7">
                    <p><strong style="color:red">Tồng Tiền: </strong> <%= total %> VNĐ</p>
                </td>
            </tr>
        </tbody>

        </table>
      </div>
    </div>
 


    <%- include("../layout/footer") %>
