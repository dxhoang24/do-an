<%- include("../layout/head") %>




  <body>
    <div class="aside" style="border: none;">
      <%- include("../layout/aside_admin") %>
    </div>
    <div class="content">
      <%- include("../layout/nav_admin") %>

        <div class="profile">
          <div class="container">
            <!--  breadcrumb -->
            <h1 class="heading1"><span class="maintext"> </span><span class="subtext"> Chi tiết mua hàng</span></h1>
            <hr>
            <a href="/list_order">Quay lại</a>
            <!-- Cart-->
            <div class="cart-info">
              <table class="table table-striped table-bordered">
                <tr>

                  <th>ID</th>
                  <th>Name</th>
                  <th>Hình ảnh</th>
                  <th>Màu sắc</th>
                  <th>Size</th>
                  <th>Số Lượng</th>
                  <th>Thành tiền</th>

                </tr>
                <tbody>
                  <% var id=0; var total=0 %>
                    <% cart.cart.forEach(function(item){ id ++; total +=item.price;%>
                      <tr>
                        <td class="align-middle">
                          <%= id%>
                        </td>
                        <td class="align-middle">
                          <%= item.item.name%>
                        </td>
                        <td class="align-middle"> <img src="/upload/<%= item.item.image%>" width="150px" alt=""></td>
                        <td class="align-middle">
                          <%= item.color %>
                        </td>
                        <td class="align-middle">
                          <%= item.size %>
                        </td>
                        <td class="align-middle">
                          <%= item.qty%>
                        </td>

                        <td class="align-middle">
                          <%= item.price%>
                        </td>
                      </tr>
                      <%})%>
                        <tr>
                          <td colspan="7">
                            <% if(cart.st==0){ %>
                              <a href="/xacnhan/<%= cart._id%>" onClick="sendmail('success')">Đang chờ xử lý</a>
                              <%}else{ %>
                                <span style="color: rgb(65, 204, 65);">Đã xác nhận</span>
                                <%}%> 
                              |<a href="/xoa/<%= cart._id %>" onClick="sendmail('huy')">Xoá</a>
                          </td>
                        </tr>
                        <tr>
                          <td colspan="7">
                            <p><strong style="color:red">Tồng Tiền: </strong>
                              <%= total %>đ
                            </p>
                          </td>
                        </tr>
                </tbody>

              </table>
            </div>

          </div>

        </div>
  </body>

  <script>
    function sendmail(type) {
        let noidung = document.getElementById("phanhoi").value
        let data2 = {
            email: "",
            type: 'lienhe',
            noidung: noidung
        }
        if(noidung ===''){
            document.getElementById(`errorPhanhoi`).textContent = "Thông tin phản hồi không được bỏ trống !! ";
        }else{
            document.getElementById(`errorPhanhoi`).textContent = "";
            fetch('/sendmail', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data2)
            })
            .then(response => response.json())
            .catch(error => {
                console.error('Error calling API:', error);
            });
        }
  }
</script>